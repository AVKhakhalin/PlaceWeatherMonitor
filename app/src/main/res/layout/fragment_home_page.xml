<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.homepage.HomePageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_data_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/progressbar_weather_data_list"
        android:layout_width="@dimen/progressbar_weather_data_list_layout_width"
        android:layout_height="@dimen/progressbar_weather_data_list_layout_height"
        android:layout_gravity="center"
        android:visibility="visible" />
</FrameLayout>